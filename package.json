{
  "name": "neuro-contracts",
  "version": "1.0.0",
  "license": "MIT",
  "scripts": {
    "build": "yarn compile && yarn flatten",
    "compile": "npx hardhat compile",
    "flatten": "yarn dirs & yarn flatten1 & yarn flatten2 & yarn flatten3 & yarn flatten4 & yarn flatten5 & yarn flatten6 & yarn flatten7",
    "dirs": "npx hardhat mkdir contracts-flatten",
    "flatten1": "npx hardhat flat contracts/EuroStaking.sol > contracts-flatten/EuroStaking.sol",
    "flatten2": "npx hardhat flat contracts/EuroToken.sol > contracts-flatten/EuroToken.sol",
    "flatten3": "npx hardhat flat contracts/BUSD_TestToken.sol > contracts-flatten/BUSD_TestToken.sol",
    "flatten4": "npx hardhat flat contracts/USDT_TestToken.sol > contracts-flatten/USDT_TestToken.sol",
    "flatten5": "npx hardhat flat contracts/XRP_TestToken.sol > contracts-flatten/XRP_TestToken.sol",
    "flatten6": "npx hardhat flat contracts/DAI_TestToken.sol > contracts-flatten/DAI_TestToken.sol",
    "flatten7": "npx hardhat flat contracts/BTCB_TestToken.sol > contracts-flatten/BTCB_TestToken.sol",
    "test": "npx hardhat test"
  },
  "devDependencies": {
    "@chainlink/contracts": "^0.6.1",
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@nomiclabs/hardhat-ethers": "^2.2.3",
    "@openzeppelin/contracts": "^4.9.2",
    "@typechain/ethers-v6": "^0.5.1",
    "@typechain/hardhat": "^9.1.0",
    "@types/chai": "^4.3.9",
    "@types/mocha": "^10.0.3",
    "@types/node": "^20.8.7",
    "dotenv": "^16.3.1",
    "chai": "^4.3.10",
    "ethers": "^6.8.0",
    "hardhat": "^2.18.2",
    "hardhat-gas-reporter": "^1.0.9",
    "mocha": "^10.2.0",
    "solidity-coverage": "^0.8.5",
    "ts-node": "^10.9.1",
    "typechain": "^8.3.2",
    "typescript": "^5.2.2",
    "@uniswap/v3-core": "Uniswap/v3-core#0.8",
    "@uniswap/v3-periphery": "Uniswap/v3-periphery#0.8"
  }
}
